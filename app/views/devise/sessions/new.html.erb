<h2 class="headers">LOGIN</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "field" %>
  </div>

  <div class="">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="btn">
    <%= f.submit "Log in", class: "actions" %>
  </div>
<% end %>

<div class="links">
<%= render "devise/shared/links" %>
</div>
