<article class="home-cat" id="<%= dom_id category %>">
  <div>
    <%= image_tag(category.image, class: "image") %>
  </div>
  <div class="name-date">
    <h3 class="name-cat"><%= category.name %></h3>
    <p class="date"> <%= category.created_at.strftime('%d %b %Y') %></p>
  </div>
  <p class="total-amount3">$<%=category.total_amount%></p>
</article>
