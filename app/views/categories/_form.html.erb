<%= form_with(model: @category, url: categories_path, id: "save-categ-from") do |form| %>
  <div class="input">
    <%= form.text_field :name, required: true, placeholder: "Name", class: "field" %>
  </div>

  <strong>Upload Image</strong>
  <div class="input">
    <%= form.file_field :image, required: true, class:"input"%>
  </div>
  
  <div class="d-flex">
    <div class="new-cat-btn">
      <%= form.submit 'ADD', class: "btn-cat"%>
    </div>
  </div>

<% end %>
